<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
 http://www.springframework.org/schema/context
 http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!--<import resource="classpath:../resources/db/datasource.xml"/>-->
    <!--<import resource="classpath:../resources/db/persistense.xml"/>-->

    <context:component-scan base-package="ru.neoflex.ebase.controller" />
    <context:annotation-config/>


    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix">
            <value>/WEB-INF/views/</value>
        </property>
        <property name="suffix">
            <value>.jsp</value>
        </property>
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
        <property name="url" value="jdbc:oracle:thin:@192.168.1.111:1521:orcl" />
        <property name="username" value="shakhin" />
        <property name="password" value="skv" />
    </bean>

    <bean id="jdbcTemplate"
          class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg ref="dataSource" />
    </bean>
    <!--<end id="bean.jdbcTemplate" />-->

    <!--<start id="bean.personDAO" />-->
    <bean id="personDAO"
          class="ru.neoflex.ebase.dao.PersonDAO">
        <constructor-arg ref="dataSource"/>
        <property name="jdbcTemplate" ref="jdbcTemplate" />
    </bean>
</beans>